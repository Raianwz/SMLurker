{
  "name": "SMlurker",
  "version": "0.1.14",
  "description": "Twich Lurker app",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder --dir --ia32",
    "build": "electron-builder --ia32",
    "release": "electron-builder --ia32 --publish always",
    "nodemon": "nodemon --watch . --exec electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raianwz/SMLurker.git"
  },
  "author": "Raianwz",
  "license": "MIT",
  "bugs": {
    "url": "https://smlurker.raianwz.com.br/issues"
  },
  "homepage": "https://smlurker.raianwz.com.br/#readme",
  "build": {
    "appId": "com.smlurker",
    "productName": "SMLurker",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "buildResources": "src/assets",
      "output": "releases"
    },
    "extraResources": [
      {
        "from": "./src/assets/",
        "to": "assets",
        "filter": [
          "**/*",
          "!icon.ico"
        ]
      }
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}.Portable.${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "raianwz",
      "releaseType": "release",
      "repo": "SMLurker"
    },
    "artifactName": "${productName}.${ext}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",

    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "auto-launch": "^5.0.6",
    "electron-updater": "^6.3.9",
    "tmi.js": "^1.8.5"
  }
}
